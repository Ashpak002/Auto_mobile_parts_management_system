CREATE TABLE parts (
    id INT AUTO_INCREMENT PRIMARY KEY,
    sr_no INT UNIQUE NOT NULL,
    name VARCHAR(255) NOT NULL,
    description TEXT NOT NULL,
    price DECIMAL(10,2) NOT NULL,
    manufacture_date DATE,
    expiry_date DATE,
    category VARCHAR(100) DEFAULT 'General'
);

